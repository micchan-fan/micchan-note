---
import { getCollection } from 'astro:content';

const newsPosts = (await getCollection('newsPosts')).sort(
	(a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
);
---

<style lang="scss">
.newsList {
	display: block;
	font-size: 16px;
	color: #333333;
	text-decoration: none;
	font-weight: bold;
    transition: all 0.15s;
	margin-bottom: 4px;

	&__scheduleDate {
		font-size: 16px;
		font-weight: normal;
	}

	&:hover {
		text-decoration: underline;
		color: #e84e91;
	    transition: all 0.15s;
	}
}
</style>

{newsPosts.slice(0, 3).map((post) => (
	<a href={`news/${post.slug}`} class="newsList">
		<h3 class="newsList__title">{post.data.title}</h3>
		<span class="newsList__scheduleDate">{post.data.publishDate}</span>
	</a>
))}
