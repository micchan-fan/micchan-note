---
const {text} = Astro.props;
---
<style lang="scss">
    .wip {
        background-color: #fce103;
        padding: 14px;
        margin-bottom: 16px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        border: 2px dashed #585858;

        &__header {
            position: relative;

            &__icon {
                color: #585858;
                font-size: 20px;
                position: absolute;
                left: 0;
                top: 2px;
            }
            &__title {
                color: #333333;
                font-size: 16px;
                padding-left: 24px;
                font-weight: bold;

            }
        }

        &__content p {
            padding-left: 16px;
            font-size: 13px;
            color: #333333;
            line-height: 16px;
        }
    }
</style>

<div class="wip">
    <div class="wip__header">
        <span class="material-icons wip__header__icon">announcement</span>
        <span class="wip__header__title">工事中</span>
    </div>
    <div class="wip__content">
        <p>{text}</p>
    </div>
</div>