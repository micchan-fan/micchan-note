---
const {title} = Astro.props;
---
<style lang="scss">
    .middleHeader {
        background-color: #ffffff;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 16px;

        @media screen and (max-width: 768px) {
            margin-bottom: 24px;
        }

        h2 {
            font-size: 20px;
        }
    }
</style>

<div class="middleHeader">
    <h2>{title}</h2>
</div>